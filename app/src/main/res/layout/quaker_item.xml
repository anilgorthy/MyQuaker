<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/quakerCV"
    android:layout_margin="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/date"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dateValTV"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/dateTV"
            android:layout_marginStart="102dp"
            android:layout_alignStart="@+id/dateTV"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            tools:text="April 07, 2018 01:48:38" />

        <TextView
            android:id="@+id/magnitudeTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTV"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="@string/magnitude"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/magnitudeValueTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dateValTV"
            android:layout_alignTop="@+id/magnitudeTitleTV"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            tools:text="TextView" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
